<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.PresentationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:animateLayoutChanges="false"
        android:background="#4685DA"
        android:elevation="0dp"
        android:paddingTop="16dp"
        android:fitsSystemWindows="true"
        android:layoutAnimation="@null"
        android:stateListAnimator="@null"
        android:theme="@style/Theme.Forecast.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:animateLayoutChanges="false"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            android:layoutAnimation="@null"
            android:stateListAnimator="@null"
            app:contentScrim="#4685DA"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:toolbarId="@+id/toolbar">

            <ImageView
                android:id="@+id/img_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="40dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                android:fitsSystemWindows="true"
                android:paddingTop="8dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Theme.Forecast.PopupOverlay" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_presentation" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>